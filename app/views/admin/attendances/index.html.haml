.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_attendances_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_attendance_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Attendances
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_attendance.lessonslog_id", :default => t("activerecord.labels.lessonslog_id", :default => "Lessonslog_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @attendances.each do |attendance|
          %tr{:class => cycle("odd", "even")}
            %td
              = attendance.id
            %td
              = link_to attendance.lessonslog_id, admin_attendance_path(attendance)
            %td
              = attendance.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_attendance_path(attendance)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_attendance_path(attendance)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_attendance_path(attendance), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
