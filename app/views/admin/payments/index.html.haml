.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_payments_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_payment_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Payments
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_payment.person_id", :default => t("activerecord.labels.person_id", :default => "Person_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @payments.each do |payment|
          %tr{:class => cycle("odd", "even")}
            %td
              = payment.id
            %td
              = link_to payment.person_id, admin_payment_path(payment)
            %td
              = payment.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_payment_path(payment)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_payment_path(payment)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_payment_path(payment), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
