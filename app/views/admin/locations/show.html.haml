.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_locations_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_location_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_location_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_location.location", :default => t("activerecord.labels.location", :default => "Location"))
          \:
        = @location.location
      %p
        %b
          = t("activerecord.attributes.admin_location.rate", :default => t("activerecord.labels.rate", :default => "Rate"))
          \:
        = @location.rate
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_location_path(@location), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_location_path(@location), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
