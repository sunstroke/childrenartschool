.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_record_books_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_record_book_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_record_book_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      RecordBook
    .inner
      = form_for @record_book, :url => admin_record_book_path(@record_book), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
