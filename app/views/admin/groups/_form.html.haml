.group
  = f.label :name, t("activerecord.attributes.group.name", :default => "Название группы"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: Мастерская Гаврилова Ш12
.group
  = f.label :label, t("activerecord.attributes.group.label", :default => "Короткая ссылка"), :class => :label
  = f.text_field :label, :class => 'text_field'
  %span.description Ex: sh12 , группа будет доступна по адресу /groups/sh12  
.group
  = f.label :open, t("activerecord.attributes.group.open", :default => "Открыта?"), :class => :label
  = f.check_box :open, :class => 'check_box'
  %span.description Ex: По умолчанию группа закрыта, чтобы открыть, надо поставить галочку
.group
  = f.label :program_id, t("activerecord.attributes.group.program_id", :default => "Учебная программа"), :class => :label
  = collection_select(:group, :program_id, Program.all, :id, :name, :prompt => 'Выберите программу')  
  %span.description Ex: программа должна быть создана заранее
.group
  = f.label :teacher_id, t("activerecord.attributes.group.teacher_id", :default => "Преподаватель"), :class => :label
  = collection_select(:group, :teacher_id, Teacher.all, :id, :fullname, :prompt => 'Выберите преподавателя')  
  %span.description Ex: кто будет вести занятия у группы
.group
  = f.label :price, t("activerecord.attributes.group.price", :default => "Цена"), :class => :label
  = f.text_field :price, :class => 'text_field'
  %span.description Ex: цена указана за месяц обучения, в рублях
.group
  = redactor("#group_prim")
  = f.label :prim, t("activerecord.attributes.group.prim", :default => "Примечание"), :class => :label
  = f.text_area :prim, :class => 'text_area', :style=>"height: 300px; width: 99%;"
  %span.description Ex: Информация об открытых уроках и пр
.group
  = f.label :calendar, t("activerecord.attributes.group.calendar", :default => "Расписание занятий"), :class => :label
  = f.text_area :calendar, :class => 'text_area'
  %span.description Ex: указывается пока в виде Пн 18:00-20:00
.group
  = f.label :vk, t("activerecord.attributes.group.vk", :default => "Название группы vkontakte"), :class => :label
  = f.text_field :vk, :class => 'text_field'
  %span.description Ex: идентификатор, например если ссылка club29029221, то идентификатор 29029221
.group
  = f.label :fb, t("activerecord.attributes.group.fb", :default => "Название группы facebook"), :class => :label
  = f.text_field :fb, :class => 'text_field'
  %span.description Ex: идентификатор , например 133635153391913
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_groups_path, :class => "text_button_padding link_button"
