.group
  = f.label :img, t("activerecord.attributes.photo.img", :default => "Img"), :class => :label
  = f.file_field :img    
  = image_tag @photo.img_url.to_s if @photo.img  
  %span.description Ex: a simple text
.group
  = f.label :slideshow_id, t("activerecord.attributes.photo.slideshow_id", :default => "Slideshow"), :class => :label
  = f.text_field :slideshow_id, :class => 'text_field'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), photos_path, :class => "text_button_padding link_button"
