%section#section
  #info
    %h2
      = @group.program.name
      %br
      (
      = @group.name
      )
    -if @group.prim?
      = @group.prim
      %hr
    .col{:style=>"float:left; width: 300px;"}
      - if @group.program_id? 
        %h2
          Учебная программа
        = simple_format(@group.program.annotation) if @group.program_id?
        %br/
    .col{:style=>"float:left; width: 300px;"}
      - if @group.calendar?
        %h2
          Расписание занятий
        = simple_format(@group.calendar)
        %br/
      - if @group.price?        
        %h2
          Стоимость обучения
        = number_to_currency(@group.price.abs, :precision => 0) if @group.price?
        %br/
      %br/
      %br/
      %h2
        Хочу учиться
      = link_to "Подать заявку", new_group_person_path(@group)      
    
  %aside#side.clearfix
    = image_tag @group.teacher.avatar.url, :style=>"width: 300px; "
    %br/
    = @group.teacher.fullname
    -if @group.vk?
      %br/
      = render "vk", :object => @group
  .clearfix