.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", people_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_person_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_person_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Person
    .inner
      = form_for @person, :url => person_path(@person), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
