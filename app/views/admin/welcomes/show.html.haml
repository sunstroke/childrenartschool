.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_welcomes_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_welcome_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_welcome_path
      %li= link_to "Не активные", admin_noactive_banner_path            
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_welcome.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @welcome.name
      %p
        %b
          = t("activerecord.attributes.admin_welcome.visible", :default => t("activerecord.labels.visible", :default => "Visible"))
          \:
        = @welcome.visible
      %p
        %b
          = t("activerecord.attributes.admin_welcome.url", :default => t("activerecord.labels.url", :default => "Url"))
          \:
        = @welcome.url
      %p
        %b
          = t("activerecord.attributes.admin_welcome.text", :default => t("activerecord.labels.text", :default => "Text"))
          \:
        = @welcome.text
      %p
        %b
          = t("activerecord.attributes.admin_welcome.position", :default => t("activerecord.labels.position", :default => "Position"))
          \:
        = @welcome.position
      %p
        %b
          = t("activerecord.attributes.admin_welcome.image", :default => t("activerecord.labels.image", :default => "Image"))
          \:
        = @welcome.image
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_welcome_path(@welcome), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_welcome_path(@welcome), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
