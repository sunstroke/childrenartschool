<div id="sign_in1">
<section id="section" class="container">
  <div class="row">
      <div class="span12 header">
        <h1>Вдох</h1>
      </div>
      <%= form_tag sessions_path do %>
      <div class="span12 footer">

            <%= text_field_tag :email, params[:email], :placeholder=>"Email" %>
            <%= password_field_tag :password, :placeholder=>"Пароль" %>
            <%= submit_tag "Вдох" %>
          
      </div>
      <div class="span12 proof">
        <div class="span5 remember"> 
          <%= label_tag "Запомни меня",nil, :class=>"checkbox" %>
          <%= check_box_tag :remember_me, 1, params[:remember_me], :class=>"checkbox" %>

        </div>
        <div class="span3 dosnt"> 
          <span>НЕ зарегистрирован?</span> 
          <%= link_to "Зарегистрируйся", signup_path %>
        </div>
      </div>
      <% end %>
      <div class="span3 division">
        <div class="line l"></div> 
        <span>Забыли пароль?</span> 
        <div class="line r"></div>
      </div>
      <div class="span12 footer">
        <%= render 'forgot_password_form' %>
      </div>
  </div>
</section>
</div>