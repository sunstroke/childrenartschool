#showcase
  .container
    .section_header
      %h3 Наши направления
    .row.feature_wrapper
      .features_op1_row
        -@directions.each do |direction|
          .span4.feature
            .img_box
              %a{href: "#{direction.link}"}
                =image_tag(direction.img_url(:thumb))
                %span.circle
                  %span.plus +
            .text
              %a{href: "#{direction.link}"}
                %h6=direction.name
              %p=direction.desc

#showcase
  .container
    .section_header
      %h3 Live view
    .row.feature_wrapper
      .features_op1_row
        -@news.each do |news|  
          .span4.feature
            .img_box
              %img.img-responsive.img-circle{src: "#{news.img_url(:thumb)}", :style=>"-webkit-border-radius: 500px; -moz-border-radius: 500px; border-radius: 500px;"}
            .text
              %h6
                =news.name
              %p= raw(news.desc)
              = link_to "Читать дальше", news.link, :class=>"link_more" if news.link?

