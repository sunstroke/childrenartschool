.group
  = f.label :name, t("activerecord.attributes.page.name", :default => "Заголовок"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: будет показываться в виде Title страницы и заголовка H1
.group
  = f.label :label, t("activerecord.attributes.page.label", :default => "короткая ссылка"), :class => :label
  = f.text_field :label, :class => 'text_field'
  %span.description Ex: указывается на английском
.group
  = f.label :text, t("activerecord.attributes.page.text", :default => "Текст"), :class => :label
  = f.text_area :text, :class => 'text_area'
  %span.description Ex: содержание страницы
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_pages_path, :class => "text_button_padding link_button"
