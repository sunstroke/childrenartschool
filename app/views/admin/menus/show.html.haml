.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_menus_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_menu_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_menu_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_menu.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @menu.name
      %p
        %b
          = t("activerecord.attributes.admin_menu.parent", :default => t("activerecord.labels.parent", :default => "Parent"))
          \:
        = @menu.parent
      %p
        %b
          = t("activerecord.attributes.admin_menu.visible", :default => t("activerecord.labels.visible", :default => "Visible"))
          \:
        = @menu.visible
      %p
        %b
          = t("activerecord.attributes.admin_menu.link", :default => t("activerecord.labels.link", :default => "Link"))
          \:
        = @menu.link
      %p
        %b
          = t("activerecord.attributes.admin_menu.position", :default => t("activerecord.labels.position", :default => "Position"))
          \:
        = @menu.position
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_menu_path(@menu), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_menu_path(@menu), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
