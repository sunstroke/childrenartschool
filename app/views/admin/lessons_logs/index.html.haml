.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_lessons_logs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_lessons_log_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      LessonsLogs
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_lessons_log.group_id", :default => t("activerecord.labels.group_id", :default => "Group_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @lessons_logs.each do |lessons_log|
          %tr{:class => cycle("odd", "even")}
            %td
              = lessons_log.id
            %td
              = link_to lessons_log.group_id, admin_lessons_log_path(lessons_log)
            %td
              = lessons_log.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_lessons_log_path(lessons_log)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_lessons_log_path(lessons_log)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_lessons_log_path(lessons_log), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
