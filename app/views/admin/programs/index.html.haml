.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_programs_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_program_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      программы
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            Позиция
          %th
            = t("activerecord.attributes.admin_program.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.program_type", :default => "Тип программы")
          %th.last &nbsp;
        - @programs.each do |program|
          %tr{:class => cycle("odd", "even")}
            %td
              = program.id
            %td
              = program.position              
            %td
              = link_to program.name, admin_program_path(program)
            %td
              = program.program_type
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_program_path(program)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_program_path(program)} 
              |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_program_path(program), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
