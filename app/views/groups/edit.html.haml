.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", groups_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_group_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_group_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Group
    .inner
      = form_for @group, :url => group_path(@group), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
