.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", pages_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_page_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", page_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.page.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @page.name
      %p
        %b
          = t("activerecord.attributes.page.label", :default => t("activerecord.labels.label", :default => "Label"))
          \:
        = @page.label
      %p
        %b
          = t("activerecord.attributes.page.text", :default => t("activerecord.labels.text", :default => "Text"))
          \:
        = simple_format(@page.text)
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_page_path(@page), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), page_path(@page), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
