.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_people_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_person_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_person_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.person.fullname", :default => t("activerecord.labels.fullname", :default => "Полное имя"))
          \:
        = @person.fullname
      %p
        %b
          = t("activerecord.attributes.person.current_group", :default => t("activerecord.labels.zachetka", :default => "группа"))
          \:
        = @person.group.name
        %p
          %b
            = t("activerecord.attributes.person.current_group", :default => t("activerecord.labels.mail", :default => "Email"))
            \:
          = @person.group.mail        
      %p
        %b
          = t("activerecord.attributes.person.tel", :default => t("activerecord.labels.tel", :default => "Номер телефона для связи"))
          \:
        = @person.tel
      %p
        %b
          = t("activerecord.attributes.person.birthday", :default => t("activerecord.labels.birthday", :default => "Дата рождения"))
          \:
        = l @person.birthday , :format=>:brth
      %p
        %b
          = t("activerecord.attributes.person.about", :default => t("activerecord.labels.about", :default => "Дополнительная информация"))
          \:
        = @person.about
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_person_path(@person), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_person_path(@person), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
