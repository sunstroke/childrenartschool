.group
  = f.label :fullname, t("activerecord.attributes.person.fullname", :default => "Полное имя"), :class => :label
  = f.text_field :fullname, :class => 'text_field'
  %span.description Ex: Иванов Иван Иванович
.group
  = f.label :role_type, t("activerecord.attributes.person.role_type", :default => "Тип обучения"), :class => :label
  = f.text_field :role_type, :class => 'text_field'
  %span.description Ex: школа/курсы и т.д.

.group
  = f.label :current_group, t("activerecord.attributes.person.current_group", :default => "Текущая группа"), :class => :label
  = collection_select(:person, :current_group, Group.all(:conditions=>['open=?',true]), :id, :name, :prompt => 'Выберите группу')  
  %span.description Ex: Мастерская Васечкина
  
.group
  = f.label :zachetka, t("activerecord.attributes.person.zachetka", :default => "Зачетка"), :class => :label
  = f.text_field :zachetka, :class => 'text_field'
  %span.description Ex: 254 Иванов Иван (пока не работает, не заполнять!!)
.group
  = f.label :tel, t("activerecord.attributes.person.tel", :default => "Номер телефона"), :class => :label
  = f.text_field :tel, :class => 'text_field'
  %span.description Ex: +79265554433
.group
  = f.label :mail, t("activerecord.attributes.person.mail", :default => "Адрес электронной почты"), :class => :label
  = f.email_field :mail, :class => 'text_field'
  %span.description Ex: mail@mail.com  
.group
  = f.label :sub_group, t("activerecord.attributes.group.sub_group", :default => "Подписка на новости группы"), :class => :label
  = f.check_box :sub_group, :class => 'check_box'
  %span.description Вам на почту будут приходить актуальные новости группы. Любые изменения или дополнения. Вы всегда будете в курсе последних событий.
.group
  = f.label :sub_all, t("activerecord.attributes.group.sub_all", :default => "Подписка на новости школы"), :class => :label
  = f.check_box :sub_all, :class => 'check_box'
  %span.description  Вам на почту будут приходить новости школы. Информация о новых группах, курсах, акциях и спецпредложениях.                     
.group
  = f.label :birthday, t("activerecord.attributes.person.birthday", :default => "Дата рождения"), :class => :label
  = f.date_select :birthday,:start_year=>Time.now.year-21, :end_year=>Time.now.year, :class => 'datetime_select'
  %span.description Ex: 1 апреля 1995 года
.group
  = redactor("#person_about")
  = f.label :about, t("activerecord.attributes.person.about", :default => "Информация об ученике"), :class => :label
  = f.text_area :about, :class => 'text_area'
  %span.description Ex: 
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_people_path, :class => "text_button_padding link_button"
