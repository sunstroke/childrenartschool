.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", people_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_person_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      People
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.person.fullname", :default => t("activerecord.labels.fullname", :default => "Fullname"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @people.each do |person|
          %tr{:class => cycle("odd", "even")}
            %td
              = person.id
            %td
              = link_to person.fullname, person_path(person)
            %td
              = person.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", person_path(person)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_person_path(person)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", person_path(person), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
