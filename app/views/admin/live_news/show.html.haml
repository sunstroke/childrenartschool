.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_live_news_index_url
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_live_news_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_live_news_path
  .content
    .inner
      %article.more_item
        %h1= @live_news.name
        .img_more{:style => "background: url('#{@live_news.img_url(:thumb)}');"}
        .text_more
          = @live_news.desc
        = link_to "Читать дальше", @live_news.link, :class=>"link_more" if @live_news.link?
    
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_live_news_path(@live_news), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_live_news_path(@live_news), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
