.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_slideshows_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_slideshow_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Slideshows
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.slideshow.theme_id", :default => t("activerecord.labels.theme_id", :default => "Theme_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @slideshows.each do |slideshow|
          %tr{:class => cycle("odd", "even")}
            %td
              = slideshow.id
            %td
              = link_to slideshow.name, admin_slideshow_path(slideshow)
            %td
              = slideshow.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_slideshow_path(slideshow)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_slideshow_path(slideshow)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_slideshow_path(slideshow), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
