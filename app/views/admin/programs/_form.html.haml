.group
  = f.label :name, t("activerecord.attributes.program.name", :default => "Название программы"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: Первый год обучения
.group
  = f.label :duration, t("activerecord.attributes.program.duration", :default => "Дительность обучения"), :class => :label
  = f.number_field :duration, :class => 'text_field', :style=>"width: 100px;"
  %span.description Ex: указывается количество учебных часов
.group
  = f.label :position, t("activerecord.attributes.program.position", :default => "Порядок"), :class => :label
  = f.number_field :position, :class => 'text_field', :style=>"width: 100px;"
  %span.description Ex: учебные программы упорядочиваются по возрастанию номеров, при отображении на странице, н.п. /school 
.group
  = f.label :annotation, t("activerecord.attributes.program.annotation", :default => "Аннотация"), :class => :label
  = f.cktext_area :annotation, :class => 'text_area'
  %span.description Ex: краткое содержание программы
.group
  = f.label :program_type, t("activerecord.attributes.program.type", :default => "Тип "), :class => :label
  = f.text_field :program_type, :class => 'text_field'
  %span.description Ex: школа/курсы и т.д.
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_programs_path, :class => "text_button_padding link_button"
