:css
  .img_more {
    margin: 20px auto;
    border: 0px solid black;
    border-radius: 125px;
    -moz-border-radius: 125px;
    -khtml-border-radius: 125px;
    -webkit-border-radius: 125px;
    width: 250px;
    height: 250px;
  }
.group
  = f.label :name, t("activerecord.attributes.live_news.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :link, t("activerecord.attributes.live_news.link", :default => "Link"), :class => :label
  = f.text_field :link, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :img, t("activerecord.attributes.live_news.img", :default => "Img"), :class => :label
  = f.file_field :img, :class => 'text_field'
  - if @live_news.img?
    = image_tag @live_news.img_url(:thumb)
    .img_more{:style => "background: url('#{@live_news.img_url(:thumb)}');"}
  %span.description Ex: a simple text
.group
  = f.label :desc, t("activerecord.attributes.live_news.desc", :default => "Desc"), :class => :label
  = f.text_area :desc, :class => 'text_area'
  %span.description Ex: a simple text
.group
  = f.label :position, t("activerecord.attributes.live_news.position", :default => "Position"), :class => :label
  = f.text_field :position, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :visible, t("activerecord.attributes.live_news.visible", :default => "Visible"), :class => :label
  = f.check_box :visible, :class => 'check_box'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), admin_live_news_index_url, :class => "text_button_padding link_button"
