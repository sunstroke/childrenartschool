.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", admin_directions_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_direction_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Directions
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.admin_direction.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @directions.each do |direction|
          %tr{:class => cycle("odd", "even")}
            %td
              = direction.id
            %td
              = link_to direction.name, admin_direction_path(direction)
            %td
              = direction.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", admin_direction_path(direction)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_admin_direction_path(direction)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", admin_direction_path(direction), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
- content_for :sidebar, render(:partial => 'sidebar')
